<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CECECE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.loadimage.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/calque1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sql"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#003366"
            android:drawableLeft="@drawable/sqlite"
            android:text="@string/sql"
            android:textColor="#BBD2E1"
            android:textSize="13dp" />

        <Button
            android:id="@+id/loadimage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#003366"
            android:drawableLeft="@drawable/image"
            android:text="Load image"
            android:textColor="#BBD2E1"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calque2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calque1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/execute"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="#003366"
            android:text="Execute"
            android:textColor="#BBD2E1"
            android:textSize="13dp" />

        <Button
            android:id="@+id/response"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#003366"
            android:text="Serveur response"
            android:textColor="#BBD2E1"
            android:textSize="13dp" />

        <Button
            android:id="@+id/xml"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#003366"
            android:drawableLeft="@drawable/xml"
            android:text="XML"
            android:textColor="#BBD2E1"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calque3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calque2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/file"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="#003366"
            android:text="File I/O"
            android:textColor="#BBD2E1"
            android:textSize="13dp" />

        <Button
            android:id="@+id/Web_view"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#003366"
            android:text="@string/webview"
            android:textColor="#BBD2E1"
            android:textSize="13dp" 
           />
    </LinearLayout>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_below="@+id/calque3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/tt"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/calque3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

     <EditText
        android:id="@+id/tt2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />
    
    
    <ImageView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/webView2"
        android:layout_below="@+id/picture"
        android:layout_marginTop="28dp" />

    <WebView
        android:id="@+id/webView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/calque1"
        android:layout_alignParentBottom="true"
         />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/webView2"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t1"
        android:layout_alignRight="@+id/t1"
        android:text="TextView"
        android:textColor="#000000" />

</RelativeLayout>